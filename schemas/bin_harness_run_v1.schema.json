{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BinHarnessRun v1",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "created_at",
    "dataset_id",
    "mode",
    "n_bins",
    "N",
    "empty_bins",
    "empty_ratio",
    "entropy",
    "gini",
    "max_load",
    "collision_bins",
    "top_bins",
    "script",
    "unit_type",
    "canon_version"
  ],
  "properties": {
    "schema_version": { "const": "bin_harness_run_v1" },
    "run_id": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "dataset_id": { "type": "string" },
    "mode": { "type": "string", "enum": ["random", "exhaustive", "file"] },
    "n_bins": { "type": "integer", "minimum": 1 },
    "N": { "type": "integer", "minimum": 0 },
    "empty_bins": { "type": "integer", "minimum": 0 },
    "empty_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
    "entropy": { "type": "number", "minimum": 0 },
    "gini": { "type": "number", "minimum": 0, "maximum": 1 },
    "max_load": { "type": "integer", "minimum": 0 },
    "collision_bins": { "type": "integer", "minimum": 0 },
    "top_bins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["bin", "count", "member_ids"],
        "properties": {
          "bin": { "type": "integer", "minimum": 0 },
          "count": { "type": "integer", "minimum": 0 },
          "member_ids": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "bin_counts": {
      "type": ["array", "null"],
      "items": { "type": "integer", "minimum": 0 }
    },
    "script": { "type": "string" },
    "unit_type": { "type": "string" },
    "canon_version": { "type": "string" },
    "seed": { "type": ["integer", "null"] }
  },
  "additionalProperties": false
}
